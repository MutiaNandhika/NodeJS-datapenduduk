extends ../layout/base
block content
    section.content-header
        h1
            | Add Warga
            small it all starts here
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
                li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Warga
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/wargas/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | NIK
                                    input(type='text',name='nik_warga',placeholder='Enter NIK').form-control
                                .form-group
                                    label
                                        | Nama Warga
                                    input(type='text',name='nama_warga',placeholder='Enter Nama').form-control
                                .form-group
                                    label
                                        | Jenis Kelamin
                                    input(type='text',name='jenis_kelamin',placeholder='Enter Jenis Kelamin').form-control
                                .form-group
                                    label
                                        | Usia
                                    input(type='text',name='usia',placeholder='Enter Usia').form-control
                                .form-group
                                    label
                                        | Pendidikan
                                    input(type='text',name='pendidikan',placeholder='Enter pendidikan').form-control
                                .form-group
                                    label
                                        | Pekerjaan
                                    input(type='text',name='pekerjaan',placeholder='Enter pekerjaan').form-control
                                .form-group
                                    label
                                        | Kawin
                                    input(type='text',name='kawin',placeholder='Enter Kawin').form-control
                                .form-group
                                    label
                                        | Status
                                    input(type='text',name='status',placeholder='Enter Status').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/wargas').btn.btn-primary.pull-right
                                    | Back