extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Warga
			small menu for editing data warga
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Warga
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/wargas/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| NIK
									input(type='text',value="#{ (nik_warga == undefined) ? data.nik_warga : nik_warga }",name='nik_warga',placeholder='Enter NIK').form-control
								.form-group
									label
										| Nama Warga
									input(type='text',value="#{ (nama_warga == undefined) ? data.nama_warga : nama_warga }",name='nama_warga',placeholder='Enter Nama Warga').form-control
								.form-group
									label
										| Jenis Kelamin
									input(type='text',value="#{ (jenis_kelamin == undefined) ? data.jenis_kelamin : jenis_kelamin }",name='jenis_kelamin',placeholder='Enter Jenis Kelamin').form-control
								.form-group
									label
										| Usia
									input(type='text',value="#{ (usia == undefined) ? data.usia : usia }",name='usia',placeholder='Enter usia').form-control
								.form-group
									label
										| Pendidikan
									input(type='text',value="#{ (pendidikan == undefined) ? data.pendidikan : pendidikan }",name='pendidikan',placeholder='Enter pendidikan').form-control
								.form-group
									label
										| Pekerjaan
									input(type='text',value="#{ (pekerjaan == undefined) ? data.pekerjaan : pekerjaan }",name='pekerjaan',placeholder='Enter pekerjaan').form-control
								.form-group
									label
										| Kawin
									input(type='text',value="#{ (kawin == undefined) ? data.kawin : kawin }",name='kawin',placeholder='Enter kawin').form-control
									.form-group
									label
										| Status
									input(type='text',value="#{ (status == undefined) ? data.status : status }",name='status',placeholder='Enter status').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/wargas').btn.btn-primary.pull-right
									| Back